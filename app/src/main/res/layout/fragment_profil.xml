<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/pagelainnya">

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="Profil"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:fontFamily="@font/poppins_semibold" />

    <RelativeLayout
        android:id="@+id/profilapp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fotoProfil"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/namaakun"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="90dp"
                android:textColor="@color/black"
                android:text=""
                android:textAllCaps="true"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/email_pengguna"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="70dp"
            android:textColor="@color/black"
            android:text=""
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"/>

        <ImageButton
            android:id="@+id/toprofil"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/edit_2"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="23dp"
            android:contentDescription="ke profil"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/data"
        android:layout_width="346dp"
        android:layout_height="102dp"
        android:layout_below="@id/profilapp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:text="NIK"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/NIK" />
        <TextView
            android:id="@+id/textNIK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:text=""/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/NIK"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Jabatan"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/jabatan"/>
        <TextView
            android:id="@+id/textJabatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textNIK"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="Guru"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jabatan"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Sekolah"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/sekolah"/>
        <TextView
            android:id="@+id/textSekolah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textJabatan"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="SMK Trunojoyo Jember"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dataProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/data"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_medium"
            android:text="Nama Lengkap"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/nama_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/poppins_medium"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/namaPanggil"
            android:layout_below="@id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="text"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_medium"
            android:text="Nama Panggilan"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/namaPanggil_text"
            android:layout_below="@id/nama_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="12dp"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/tempatlahir"
            android:layout_below="@id/namaPanggil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="text"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_medium"
            android:text="Tempat Lahir"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tempatlahir_text"
            android:layout_below="@id/namaPanggil_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text=""
            android:fontFamily="@font/poppins_medium"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/tanggal"
            android:layout_below="@id/tempatlahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="text"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_medium"
            android:text="Tanggal Lahir"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tanggal_text"
            android:layout_below="@id/tempatlahir_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text=""
            android:fontFamily="@font/poppins_medium"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/alamat"
            android:layout_below="@id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="text"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_medium"
            android:text="Alamat"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/alamat_text"
            android:layout_below="@id/alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:fontFamily="@font/poppins_medium"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="540dp"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_shape2">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/lock2"
                android:contentDescription="btn_forpass" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="55dp"
                android:text="Ganti Password"
                android:textSize="15sp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"
                android:padding="3dp"
                android:fontFamily="@font/poppins_medium"
                android:contentDescription="Ganti Password"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:id="@+id/gantipassword"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:background="@drawable/button_shape2"
            android:id="@+id/logutApp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:id="@+id/btn_logout"/>


            <ImageButton
                android:id="@+id/btn_logout1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/log_out"
                android:contentDescription="btn_logout1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="55dp"
                android:text="Keluar Akun"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:padding="3dp"
                android:contentDescription="viewlogout"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:id="@+id/logOut"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>