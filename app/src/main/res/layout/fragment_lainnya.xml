<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="Lainnya"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/frame_user"
            android:layout_marginTop="3dp"
            android:contentDescription="btn_profil1"/>
        <Button
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="55dp"
            android:background="@drawable/frame_notif"
            android:layout_marginTop="3dp"
            android:contentDescription="btn_profil2"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/foto_profil"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="90dp"
                android:textColor="@color/black"
                android:text="AHMAD IRSYADUL IBAD"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/email_pengguna"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="70dp"
            android:textColor="@color/black"
            android:text="ahmadirsyadulibad7@gmail.com"/>

        <ImageButton
            android:id="@+id/toProfil"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:background="@drawable/icon_right"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="10dp"
            android:contentDescription="ke profil"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/verifikasi">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_shape2"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/centang"/>
                <TextView
                    android:layout_width="230dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="50dp"
                    android:textColor="@color/black"
                    android:text="Verifikasi Email-mu"
                    android:paddingTop="3dp"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="italic"
                    android:text="Tingkatkan keamanan dengan verifikasi alamat email"/>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="258dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_shape2"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="12dp"
                android:src="@drawable/centang"/>
            <TextView
                android:layout_width="230dp"
                android:layout_height="25dp"
                android:layout_marginStart="50dp"
                android:textColor="@color/black"
                android:text="Daftarkan Wajah"
                android:paddingTop="3dp"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="italic"
                android:text="Daftarkan wajah untuk menggunakan aplikasi absensi"/>

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="410dp"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/lock2"
                android:contentDescription="btn_forpass"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="55dp"
                android:text="Ganti Password"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:padding="3dp"
                android:contentDescription="Ganti Password"/>
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_marginTop="45dp">
            <ImageButton
                android:id="@+id/btn_logout"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/log_out"
                android:contentDescription="btn_logout"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="55dp"
                android:text="Keluar Akun"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:padding="3dp"
                android:contentDescription="viewlogout"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>