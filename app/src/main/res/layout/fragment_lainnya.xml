<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/pagelainnya">

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="Lainnya"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:fontFamily="@font/poppins_medium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fotoProfil"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/foto_profil"/>
            <TextView
                android:id="@+id/namaakun"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="90dp"
                android:textColor="@color/black"
                android:text=""
                android:textAllCaps="true"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/email_pengguna"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="70dp"
            android:textColor="@color/black"
            android:text=""
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"/>

        <ImageButton
            android:id="@+id/toprofil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_right"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="10dp"
            android:contentDescription="ke profil"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="410dp"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/lock2"
                android:contentDescription="btn_forpass" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="55dp"
                android:text="Ganti Password"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:padding="3dp"
                android:contentDescription="Ganti Password"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:id="@+id/gantipassword"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_marginTop="45dp"
            android:id="@+id/logutApp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:id="@+id/btn_logout"/>


            <ImageButton
                android:id="@+id/btn_logout1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/log_out"
                android:contentDescription="btn_logout" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="55dp"
                android:text="Keluar Akun"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:padding="3dp"
                android:contentDescription="viewlogout"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:id="@+id/logOut"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>