<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfilActivity"
    android:backgroundTint="@color/background">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/panah1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="370dp"
        android:id="@+id/panah1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profil Saya"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="45dp"
        android:layout_alignTop="@id/panah1"
        />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="350dp"
        android:src="@drawable/edit_2"
        android:id="@+id/edit1"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/framefoto"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/panah1"
        android:layout_marginTop="50dp"
        android:id="@+id/framefoto"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lengkapi dan simpan perubahan data profil yang telah anda perbaiki."
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/framefoto"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:id="@+id/textaja"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textaja"
        android:padding="30dp"
        android:id="@+id/linearlayout1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_shape"
            android:drawableLeft="@drawable/user"
            android:hint="Nama Lengkap"
            android:paddingLeft="15dp"
            android:backgroundTint="@color/white"
            android:layout_below="@+id/textaja"
            android:id="@+id/namaLengkap"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_shape"
            android:hint="Nama Panggilan"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/user"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/white"
            android:layout_below="@+id/textaja"
            android:id="@+id/namaPanggilan"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_shape"
            android:hint="Tempat Lahir"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/calendar2"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/white"
            android:layout_below="@+id/textaja"
            android:id="@+id/tempatlahir"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_shape"
            android:hint="Tanggal Lahir"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/calendar2"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/white"
            android:layout_below="@+id/textaja"
            android:id="@+id/tanggalahir"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_shape"
            android:hint="Alamat"
            android:paddingLeft="15dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/location"
            android:backgroundTint="@color/white"
            android:layout_below="@+id/textaja"
            android:id="@+id/alamat"

            />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan Perubahan"
        android:layout_below="@+id/linearlayout1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:width="250dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:id="@+id/button1"
        />










</RelativeLayout>