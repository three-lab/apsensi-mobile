<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gambar1"
        android:id="@+id/img1"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/alert_circle"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="175dp"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="98dp"
        android:text="Buat Password Baru"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="30dp"
        android:text="Password wajib minimal terdiri dari 8 karakter termasuk 1 huruf besar, 1 karakter kecil, 1 angka dan simbol"
        android:textAlignment="center" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="Password Baru"
        android:textStyle="bold"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="30dp" />

    <EditText
        android:id="@+id/edit_pass1"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="305dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_shape2"
        android:hint="Enter your password"
        android:drawablePadding="20dp"
        android:textSize="16dp"
        android:paddingLeft="20dp" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:text="Konfirmasi Password"
        android:textStyle="bold"
        android:layout_marginTop="365dp"
        android:layout_marginLeft="30dp" />

    <EditText
        android:id="@+id/edit_pass2"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="395dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_shape2"
        android:hint="Enter your password"
        android:drawablePadding="20dp"
        android:textSize="16dp"
        android:paddingLeft="20dp" />

    <Button
        android:id="@+id/btn_lanjut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="490dp"
        android:width="306dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/primaryColor"
        android:text="Simpan"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/backlogin"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="100dp"
        android:text="Kembali ke login"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="276dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/gambar4" />
</RelativeLayout>